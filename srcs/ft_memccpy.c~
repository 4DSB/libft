#include "libft.h"

void	*ft_memcpy(void *dst, const *src, int c, size_t n)
{
	char	*d;
	char	*s;

	d = dst;
	s = src;
	while(n--)
	{
		if (*s == c)
			return(*d + 1);
		*d++ = *s++;
	}
	return(NULL);
}




















